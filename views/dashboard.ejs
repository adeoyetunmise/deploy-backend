<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>
    <% if (userDetails.length > 0) { %>
    <div class="col-lg-6 mx-auto my-5 shadow-lg">
        <h1 class="text-center">Student Details</h1>

    <table class="table table-bordered table-striped table-success">
    <tr>
        <th>S/N</th>
        <th>Firstname</th>
        <th>Lastname</th>
        <th>Email</th>
        <th>Actions</th>
    </tr>
    
        <% for( let index = 0; index < userDetails.length; index++ ) { %>
        <tr>
            <td><%= index +1 %></td>
            <td><%= userDetails[index].firstname %></td>
            <td><%= userDetails[index].lastname %></td>
            <td><%= userDetails[index].email %></td>
            <td>
                <form action="/delete" method="POST">
                    <input value="<%= userDetails[index].email %>" type="hidden" name="userEmail">
                    <button class="btn btn-danger">Delete</button>
                </form>
                <form action="/edit" method="post">
                    <input type="hidden" value="<%= userDetails[index].email %>" name="userEmail">
                    <button class="btn btn-warning">Edit</button>
            </form>
            </td>
        </tr>
        <% } %>
     
    <% }else { %>
        <div class="alert text-center alert-danger">No user found</div>
        <% } %>
    </table>
    <a href="/signup">Signup</a>
</div>
</body>
</html>